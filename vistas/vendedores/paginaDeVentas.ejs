  <style>
    .ventas {
      border: solid black 2px;
      width: auto;
      height: max-content;
      padding: 5PX;
    }

    .productos {
      border: solid blue 2px;
      width: auto;
      height: 199px;
    }

    .col-auto {
      display: flex;
      justify-content: space-between;
    }
  </style>
</head>

<body>

    <section class="wrapper mt-5" id="registro">
      <div class="container-fostrap ">
        <div class="content mb-5">
          <div class="container">
            <div class="row">


              <div class="col-xs-12 col-sm-6 my-auto ">

                <div class="productos">
                  <div class="col-auto">
                    <label for="usuario" class="visually-hidden"></label>
                    <input type="text" class="form-control" id="producto" placeholder="Buscar usuario">

                    <button onclick="generarItem()">GENERAR item</button>

                  </div>
                </div>

              </div>




              <div class="col-xs-12 col-sm-6 my-auto ">


                <div class="ventas">
                  <h5>registrar ventas</h5>
                  <div class="col-auto">
                    <label for="usuario" class="visually-hidden"></label>
                    <input type="text" class="form-control" id="usuario" placeholder="Buscar usuario">



                    <select class="form-select mx:2px" aria-label="Default select example">
                      <option selected>Vendedores</option>
                      <option value="1">Isabela</option>
                      <option value="2">Leandro</option>
                      <option value="3">Santiago</option>
                    </select>
                  </div>



                  <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Example textarea</label>
                    <div class="container" id="segundo">
                      <ol id="listanombres">

                      </ol>
                    </div>
                  </div>

                  <div class="d-grid gap-2">
                    <button class="btn btn-dark" type="button">Registrar venta</button>
                  </div>

                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>




















    <script>
      function generarItem() {
        let itemIngresado = document.getElementById('producto').value;
        let lista = document.getElementById('listanombres');
        //creamos el nodo(li) para agregar a la lista ol
        let node = document.createElement('li');
        //let textoITEM= document.createTextNode(itemIngresado);
        // node.append(textoITEM);
        //le asignamos un texto al item creado
        node.innerHTML = itemIngresado;
        //agregamos el nodito (li) a la lista ol que esta en contenedor segundo
        lista.append(node);

      }
    </script>


